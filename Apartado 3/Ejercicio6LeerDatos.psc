Algoritmo Ejercicio6LeerDatos
	Definir base, altura, area Como Real;
	Escribir "Cálculo del area de un triángulo. "; 
	Escribir Sin Saltar "Introduzca la base en cm: ";
	Leer base;
	Escribir Sin Saltar "Introduzca la altura en cm: ";
	Leer altura;
	area <- (base * altura)/2;
	Escribir "El area del triángulo es: ", area, " cm².";
FinAlgoritmo

